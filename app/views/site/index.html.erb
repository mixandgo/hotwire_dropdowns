<%= turbo_frame_tag "form" do %>
  <%= form_tag root_path, method: :get, data: { controller: "dropdown", action: "change->dropdown#submit" } do %>
    <%= select_tag :make, options_from_collection_for_select(@makes, "id", "name", @make&.id), prompt: "- Please select -" %>
    <%= select_tag :model, options_from_collection_for_select(@models, "id", "name", @model&.id), prompt: "- Model -" %>
    <%= select_tag :year, options_from_collection_for_select(@years, "id", "year", @year&.id), prompt: "- Year -" %>
  <% end %>

  <% if @year %>
    <div class="mt-4">
      <span class="inline-block mr-2">âœ…</span>
      The <strong><%= "#{@year.year} #{@make.name} #{@model.name}" %></strong> is a nice car.
      <div class="mt-4"><%= link_to "Pick another", root_path, class: "text-blue-600 underline", data: { turbo_frame: "_top" } %></div>
    </div>
  <% end %>
<% end %>

